#!/usr/bin/env bash
# Configure localhost and facebook.com IP addresses

# Backup the current /etc/hosts file
sudo cp /etc/hosts /etc/hosts.backup

# Set localhost to resolve to 127.0.0.2
sudo sed -i '/localhost/d' /etc/hosts
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null

# Set facebook.com to resolve to 8.8.8.8
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null

# Display the updated /etc/hosts file
cat /etc/hosts

