#!/usr/bin/env bash
# This script configures domain zone subdomains and displays their information.

# Function to display subdomain info
display_info() {
  local domain="$1"
  local subdomain="$2"
  local ip="$3"
  echo "The subdomain ${subdomain} is an A record and points to ${ip}"
}

# Check for mandatory domain argument
if [ -z "$1" ]; then
  echo "Error: Domain name is required."
  exit 1
fi

# Actual IPs for the subdomains
lb01_ip="100.26.10.204"
web01_ip="34.239.248.207"
web02_ip="35.175.128.155"

# Configure subdomains
# Note: The actual configuration will depend on your DNS provider's setup
# Here we are just simulating the output
if [ -z "$2" ]; then
  # Display info for default subdomains if no specific subdomain is provided
  display_info "$1" "www" "$lb01_ip"
  display_info "$1" "lb-01" "$lb01_ip"
  display_info "$1" "web-01" "$web01_ip"
  display_info "$1" "web-02" "$web02_ip"
else
  # Display info for the specified subdomain
  case $2 in
    "www"|"lb-01")
      display_info "$1" "$2" "$lb01_ip"
      ;;
    "web-01")
      display_info "$1" "$2" "$web01_ip"
      ;;
    "web-02")
      display_info "$1" "$2" "$web02_ip"
      ;;
    *)
      echo "Error: Unknown subdomain."
      exit 1
      ;;
  esac
fi

